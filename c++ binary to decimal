#include <iostream>
using namespace std;

int main()
{
    int n;
    cout << "Enter the value:";
    cin >> n;
    int result = 0;
    int power = 1;
    while (n > 0)
    {
        int lastdigit = n % 10;
        result += lastdigit * power;
        power *= 2;
        n /= 10;
    }

    cout << result << endl;

    return 0;
}
